if [[ `uname` == "Darwin" ]]; then

    # mac specific aliases
    # (only checking if we are on OSX)
    alias ipy='ipython'
    alias ipyn='ipython notebook'
    alias skim='open -a Skim'
    alias m='/Applications/MATLAB_R2013a.app/bin/matlab -nodesktop -nosplash'

    # easily get into macvim
    alias vim="mvim -v"
    alias vi="mvim -v"
    alias v="mvim -v"

    # fix gitk
    alias gitk='gitk 2>/dev/null'

elif [[ `hostname | cut -d. -f2` == "titan" ]]; then

    # titan specific aliases
    echo "loading titan aliases"
    alias m='/nfs/apps/matlab/current/bin/matlab -nosplash -nodesktop'
    alias scratch='/ifs/scratch/c2b2/cw_lab/kje2109'

fi

# universal aliases
alias '..'='cd ..'
alias '...'='cd ../..'
alias '....'='cd ../../..'

alias db="cd ~/Dropbox"
alias dl="cd ~/Downloads"
alias dt="cd ~/Desktop"
alias p="cd ~/Projects"

# Portable ls with colors
if ls --color -d . >/dev/null 2>&1; then
    colorflag="--color"
elif ls -G -d . >/dev/null 2>&1; then
    colorflag="-G"
fi

# list only directories
alias ls='ls ${colorflag}'
alias lsd='ls -l ${colorflag} | grep "^d"'
